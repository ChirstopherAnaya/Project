def caesar_encode(phrase, shift):
    phrase, final, lower = phrase.split(), [], list("abcdefghijklmnopqrstuvwxyz")
    for x in phrase:
        new = ""
        for y in x:
            new += lower[(lower.index(y) + shift) % 26]
        final.append(new)
        shift += 1
        new = ""
    return " ".join(final)